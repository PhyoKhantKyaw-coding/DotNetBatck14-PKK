@model List<BlogModel> 
@{
	int no =0
}
<table>
	<thead>
		<tr>
			<th>NO.</th>
			<th>Blog Author</th>
			<th>Blog Title</th>
			<th>Blog Content</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var blog in Model)
			{
			<tr>
				<td>@(++no)</td>
				<td>@blog.BlogAuthor</td>
				<td>@blog.BlogTitle</td>
				<td>@blog.BlogContent</td>
			</tr>
			}
	</tbody>
</table>
