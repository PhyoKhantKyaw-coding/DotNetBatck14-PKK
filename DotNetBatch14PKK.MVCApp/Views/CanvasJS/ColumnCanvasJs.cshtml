@model ColumnCanvasJsModel
@using Newtonsoft.Json;

<div id="columnChartContainer" style="height: 370px; width: 100%;"></div>

@section scripts {
    <script>
        var chart = new CanvasJS.Chart("columnChartContainer", {
            animationEnabled: true,
            title: {
                text: "Column Chart Example"
            },
            axisY: {
                title: "Sales"
            },
            data: [{
                type: "column",
                dataPoints: @Html.Raw(JsonConvert.SerializeObject(Model.Data.Zip(Model.Categories, (value, category) => new { y = value, label = category })))
            }]
        });
        chart.render();
    </script>
}

