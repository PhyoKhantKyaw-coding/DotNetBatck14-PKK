@model LineCanvasJsModel
@using Newtonsoft.Json;

<div id="lineChartContainer" style="height: 370px; width: 100%;"></div>

@section scripts {
    <script>
        var chart = new CanvasJS.Chart("lineChartContainer", {
            animationEnabled: true,
            title: {
                text: "Line Chart Example"
            },
            axisY: {
                title: "Revenue"
            },
            data: [{
                type: "line",
                dataPoints: @Html.Raw(JsonConvert.SerializeObject(Model.Data.Zip(Model.Categories, (value, category) => new { y = value, label = category })))
            }]
        });
        chart.render();
    </script>
}

