@model ScatterCanvasJsModel
@using Newtonsoft.Json;

<div id="scatterChartContainer" style="height: 370px; width: 100%;"></div>

@section scripts {
    <script>
        var chart = new CanvasJS.Chart("scatterChartContainer", {
            animationEnabled: true,
            title: {
                text: "Scatter Chart Example"
            },
            axisX: {
                title: "X Axis"
            },
            axisY: {
                title: "Y Axis"
            },
            data: [{
                type: "scatter",
                toolTipContent: "<b>X:</b> {x} <br/><b>Y:</b> {y}",
                dataPoints: @Html.Raw(JsonConvert.SerializeObject(Model.Data.Select(point => new { x = point[0], y = point[1] })))
            }]
        });
        chart.render();
    </script>
}

